@if (Permiso.Permisos.Any())
{
    <RadzenPanelMenuItem Text="@Permiso.Descripcion" Icon="@(Permiso.Icon ?? string.Empty)">
        @foreach (var menu in Permiso.Permisos)
        {
            <Menu Permiso="menu" />
        }
    </RadzenPanelMenuItem>
}
else
{
    <RadzenPanelMenuItem Text="@Permiso.Descripcion" Path="@Permiso.Url" Icon="@(Permiso.Icon ?? string.Empty)" />
}

@code {
    [Parameter] public Permiso Permiso { get; set; }
}
